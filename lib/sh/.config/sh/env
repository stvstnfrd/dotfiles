#!/bin/sh
# Start by standardizing our locations.
export XDG_CACHE_HOME=${HOME}/.cache
export XDG_CONFIG_DIRS=/etc/xdg
export XDG_CONFIG_HOME=${HOME}/.config
export XDG_DATA_DIRS=/usr/local/share/:/usr/share/
export XDG_DATA_HOME=${HOME}/.local/share
export XDG_RUNTIME_DIR=${XDG_RUNTIME_DIR}
# Then a few more basic paths
export HISTFILE="${XDG_CACHE_HOME}/sh/history"
export DFC=${XDG_CONFIG_HOME}/dotfiles
# Now any script you add to ~/bin will be accessible anywhere!
export PATH="${HOME}/bin:${HOME}/local/bin:/usr/local/bin:/usr/local/sbin:${PATH}"
# This path is sourced by interactive POSIX shells
export ENV=${HOME}/.config/sh/rc
export BASH_ENV=${HOME}/.config/bash/env
