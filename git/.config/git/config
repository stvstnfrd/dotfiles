[alias]
	a = add
	ap = add --patch
	au = add -u
	b = branch -vvvv
	ba = branch --all
	bam = branch --all --merged
	bd = branch --delete
	bm = branch --merged
	br = branch --move
	c = commit
	ca = commit --amend
	cm = commit-message
	cms = commit -m 'TODO: squash'
	d = diff
	da = apply
	dc = diff --cached
	df = diff upstream/open-release/ficus.master -- 
	dg = diff upstream/open-release/ginkgo.master -- 
	dh = diff upstream/open-release/hawthorn.master -- 
	dm = diff master
	dom = diff origin/master
	dum = diff upstream/master
	e = format-patch
	ea = am
	es = send-email
	f = fetch
	fo = fetch origin
	fop = fetch origin --prune
	fu = fetch upstream
	fup = fetch upstream --prune
	g = grep
	h = hub
	hh = hub help
	hi = hub issue
	his = hub issues
	i = !test ! -d "${GIT_DIR:-./.git}" && git init && git commit --allow-empty -m 'Initialize empty directory'
	k = checkout
	k- = checkout --
	kb = checkout -b
	km = checkout master
	l = log
	lh = !git log | head
	lp = log --patch --pretty=medium
	lpr = log --patch --pretty=medium --reverse
	lr = log --reverse
	last = !git log -1 | cat
	m = merge
	ma = merge --abort
	mn = merge --no-ff
	mnl = merge --no-ff --log=30000
	mom = merge origin/master
	ms = merge --squash
	mum = merge upstream/master
	o = clone
	p = push
	pd = push downstream
	pdu = push -u downstream
	pdm = push downstream master
	po = push origin
	pom = push origin master
	q = blame
	r = rebase
	ra = rebase --abort
	rc = rebase --continue
	resolve-all = "!git status -sb | grep UU | sed 's/^UU //' | xargs vi"
	ri = rebase -i
	rim = rebase -i master
	riom = rebase -i origin/master
	rium = rebase -i upstream/master
	rom = rebase origin/master
	rorc = rebase origin/rc
	rum = rebase upstream/master
	s = status -sb
	t = stash
	ta = stash apply
	tl = stash list
	tp = stash pop
	u = submodule
	ua = submodule add
	unstage = reset HEAD --
	v = revert
	w = show
	x = reset
	xh = reset --hard
	y = cherry-pick
	ya = cherry-pick --abort
	yn = cherry-pick --no-commit
	yx = cherry-pick -x
	z = remote -vvvv
	za = remote add
	zn = remote rename
	zr = remote remove

[core]
	editor = vim
	excludesfile = ~/.config/git/ignore
	pager = diff-so-fancy | less --tabs=4 -rFX
	# sshCommand = "ssh -F ~/.config/ssh/config"

[format]
	pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[include]
	path = ~/.config/git/config.local

[url "git@github.com"]
	insteadOf = "hub"

[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true

[merge]
	tool = vimdiff

[mergetool]
	prompt = false

[push]
	default = simple

[color]
	ui = true
	diff = auto
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
